<IfModule mod_rewrite.c>
  RewriteEngine On
  
  # 1. Forcer le type MIME pour les modules JavaScript
  AddType application/javascript .js
  AddType application/javascript .mjs
  AddType application/json .json

  # 2. Proxy vers Node.js pour toutes les requêtes /api
  # Assurez-vous que votre server.js écoute bien sur le port 3000
  RewriteCond %{REQUEST_URI} ^/api [NC]
  RewriteRule ^api/(.*) http://localhost:3000/api/$1 [P,L]

  # 3. Gestion du routage React (Single Page App)
  RewriteBase /
  RewriteRule ^index\.html$ - [L]
  
  # Si le fichier ou le dossier demandé n'existe pas, on renvoie vers index.html
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteRule . /index.html [L]
</IfModule>